<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.topspin.activity.ConfiguracaoActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:text="Limpar dados de Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actBlack"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <TextView
                android:text="Limpar as informações de Login armazenadas na memória do celular."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/actCinza_escuro"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <Button
                android:text="Limpar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnLimparDadosAcesso" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@color/actCinza_escuro">

            </LinearLayout>

            <TextView
                android:text="Resultado dos últimos jogos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actBlack"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <TextView
                android:text="Visualição das quantidades dos resultados dos últimos jogos. O valor padrão é cinco (5)."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/actCinza_escuro"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerQtdJogos"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@color/actCinza_escuro">

            </LinearLayout>

            <TextView
                android:text="Tema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/actBlack"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <TextView
                android:text="Defina seu tema entre as opções abaixo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/actCinza_escuro"
                android:textSize="@dimen/act_txt5"
                android:padding="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTemas"
                android:spinnerMode="dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@color/actCinza_escuro">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
